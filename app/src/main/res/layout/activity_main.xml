<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEDED"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Text_id"
        android:text="FeedBack Form"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/image"
        android:layout_below="@id/Text_id"
        android:layout_marginTop="20dp"
        android:id="@+id/image_id"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_id"
                android:id="@+id/card_id"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="15dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Opinion matters to us!"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:id="@+id/text_id2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_id2"
                        android:text="We work super hard to make App better for you,And would love to know:how would you rate our app?"
                        android:gravity="center_horizontal"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:id="@+id/text_id3"/>

                    <RatingBar
                        android:id="@+id/Rating_bar_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stepSize="0.5"
                        android:numStars="5"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/text_id3"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>





    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Any Suggestion"
        android:layout_below="@+id/card_id"
        android:textAlignment="viewStart"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:gravity="start"
        android:layout_marginTop="20dp"
        android:background="@drawable/editetextback"
        android:id="@+id/Suggestion_id"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/Suggestion_id"
        android:textStyle="italic"
        android:id="@+id/Submit_id"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"

        android:layout_marginBottom="20dp"/>

        </RelativeLayout>
    </ScrollView>




</RelativeLayout>